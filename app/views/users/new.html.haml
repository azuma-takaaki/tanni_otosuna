%h1 Users#new
%p Find me in app/views/users/new.html.erb

= form_for(@user) do |f|
  = f.label :name
  = f.text_field :name

  = f.label :email
  = f.text_field :email

  = f.label :password
  = f.password_field :password

  = f.label :password_confirmation, "Confirmation" 
  = f.password_field :password_confirmation

  = f.hidden_field :result_uid, value: @result_uid

  = f.submit "新規登録", class: "btn btn-primary"

%br
= button_to "トップへ戻る", "/", method: :get